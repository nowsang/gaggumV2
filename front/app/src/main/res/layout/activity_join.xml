<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background_tulip"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/joinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30sp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bmjua_ttf"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/joinEmailArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
        android:id="@+id/joinEmailArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:width="200dp"
        android:layout_margin="8dp"
        android:inputType="textEmailAddress"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/joinTitle"
        app:layout_constraintBottom_toTopOf="@id/joinPasswordArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/joinPasswordArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:width="200dp"
        android:layout_margin="8dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/joinEmailArea"
        app:layout_constraintBottom_toTopOf="@id/joinBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="회원가입"
        android:background="@drawable/radius_button"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:fontFamily="@font/bmjua_ttf"
        app:layout_constraintTop_toBottomOf="@id/joinPasswordArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>